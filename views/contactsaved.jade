doctype html
html
    head
        link(rel='stylesheet', type='text/css', href='stylesheets/savedcontact.css')
        title saved
    body
        h1 Contact saved successfully
    div
        .nextstep
            label What would you like to do now?
            br
        .nextstep
            .left
                br
                button.btn.orange(onclick="loadPage('/insertData')", type='button')
                    span Save another Contact
            .left
                br
                button.btn.orange(onclick="loadPage('/getData')", type='button')
                    span Search a Contact
    script.
        function loadPage(tUrl){
            var url = "http://localhost:3010"+tUrl+"?valid="+tUrl.substring(1);
            window.location=url;
        }
