doctype html
html
    head
        meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
        title Search Contact
        link(rel='stylesheet', type='text/css', href='stylesheets/bttn.min.css')
        link(rel='stylesheet', type='text/css', href='stylesheets/stylessearch.css')
        link(rel='stylesheet', type='text/css', href='stylesheets/contactCardsDisplay.css')
    body(ng-app='myApp', ng-controller='myCtrl')
        form(method='get', action='/logout')
            button.bttn-simple.bttn-md.bttn-warning.logout-bttn(type='submit') LogOut
        #page
            form#searchForm(method='post', ng-submit='submit(firstname)')
                fieldset
                    input#s(type='text', name='searchquery', ng-model='firstname')
                    input#submitButton(type='submit', value='Submit')
        #pricing-table.clear
            ul
                .plan(ng-repeat='contact in searchResult')
                    h3
                        | {{contact.fname.toUpperCase()}}
                        br
                        | {{contact.lname.toUpperCase()}}
                        span
                            img(src='images/person.png', width='120px', height='120px' class='adjustImg')
                    ul
                        li
                            b Number
                            |  {{contact.mnumber}}
                        li
                            b Email
                            |  {{contact.email_1}}
        script(src='http://s.codepen.io/assets/libs/modernizr.js', type='text/javascript')
        script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js')
        script(src='javascripts/jquery-1.12.4.min.js')
        script(src='javascripts/getDataApp.js')
